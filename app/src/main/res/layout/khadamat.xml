<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/backkhadamat"
        android:src="@drawable/backkhadamat"
        android:scaleType="fitXY"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="60dp"
        android:gravity="center">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnrec"
            android:layout_weight="1">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="60dp"
                android:id="@+id/backres"
                android:scaleType="centerCrop"
                android:src="@drawable/buttonback15"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="35sp"
                android:text="رستوران"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:textColor="@color/text_color_2"
                android:id="@+id/txtrec"
                android:shadowColor="@color/black"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btncaffe"
            android:layout_weight="1">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="60dp"
                android:id="@+id/backcafe"
                android:scaleType="centerCrop"
                android:src="@drawable/buttonback16"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="35sp"
                android:text="کافی شاپ"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:id="@+id/txtcafe"
                android:textColor="@color/black"/>

        </RelativeLayout>

    </LinearLayout>


</RelativeLayout>